<script>
  
  function toggleDarkMode() {
    document.body.classList.toggle('dark-mode');
  }
    function toggleMode() {
      const body = document.body;
      const button = document.querySelector('.toggle-mode');
      const icon = button.querySelector('i');

      body.classList.toggle('dark-mode');
      icon.classList.toggle('fa-moon');
      icon.classList.toggle('fa-sun');
    }
  const btnTop = document.querySelector('.back-to-top');
    window.onscroll = () => {
      if (window.scrollY > 300) {
        btnTop.style.display = 'block';
      } else {
        btnTop.style.display = 'none';
      }
    };
 function scrollToTop() {
      window.scrollTo({ top: 0, behavior: 'smooth' });
    }
</script>
<script>
  fetch('site.json')
    .then(res => res.json())
    .then(data => {
      const personalContainer = document.querySelector('#personal-projects .card-grid');
      const clientContainer = document.querySelector('#client-projects .card-grid');
      const progressContainer = document.querySelector('#in-progress .card-grid');

      // إفراغ الأقسام
      personalContainer.innerHTML = '';
      clientContainer.innerHTML = '';
      progressContainer.innerHTML = '';

      data.forEach(project => {
        if (project.category === 'personal') {
          personalContainer.innerHTML += `
            <div class="card">
              <img src="${project.image}" alt="${project.name}">
              <h3>${project.name}</h3>
              <p>${project.description}</p>
              <p>تاريخ المشروع: ${project.date}</p>
              <a href="${project.link}" class="project-link">مشاهدة المشروع <i class="fas fa-external-link-alt"></i></a>
            </div>`;
        }

        else if (project.category === 'client') {
          clientContainer.innerHTML += `
            <div class="card">
              <img src="${project.image}" alt="${project.name}">
              <h3>${project.name}</h3>
              <p>اسم الزبون: ${project.client}</p>
              <p>وصف: ${project.description}</p>
              <p class="status">الحالة: ${project.status}</p>
              <p>تقييم الزبون: ${project.rating}</p>
              <p>تاريخ المشروع: ${project.date}</p>
              <a href="${project.link}" class="project-link">مشاهدة المشروع <i class="fas fa-external-link-alt"></i></a>
            </div>`;
        }

        else if (project.category === 'in-progress') {
          progressContainer.innerHTML += `
            <div class="card">
              <h3>اسم المشروع: ${project.name}</h3>
              <p>فكرة: ${project.idea}</p>
              <p class="status">الحالة: ${project.status}</p>
              <p>وقت الاكتمال المتوقع: ${project.expected}</p>
            </div>`;
        }
      });
    })
    .catch(err => {
      console.error("فشل تحميل المشاريع:", err);
    });
</script>
